# include follow rc files if their exist
DOT_RCS=(
    .trashrc
    .greprc
    .rmtsrc
    .svntoolsrc
    .extrarc
)
DOT_CUR_DIR="$(dirname "${BASH_SOURCE[0]}")"
for DOT_RC in "${DOT_RCS[@]}"; do
    [[ -f "$DOT_CUR_DIR"/"$DOT_RC" ]] && source "$DOT_CUR_DIR"/"$DOT_RC"
done
unset DOT_RC DOT_RCS DOT_CUR_DIR
